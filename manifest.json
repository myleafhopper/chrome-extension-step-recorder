{
    "name": "Step Recorder",
    "version": "1.0",
    "description": "Build an Extension!",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage"
    ],
    "background": {
        "persistent": true,
        "scripts": [
            "javascript/background.js"
        ]        
    },
    "browser_action": {
        "default_popup": "menu.html"
    }
}